generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model Playlist {
    id           Int       @id @default(autoincrement())
    name         String
    totalNumbers Int
    songs        Song[]    @relation("PlaylistSongs") 
    users        User[]    @relation("UserPlaylists") 
}

model Song {
    id          Int       @id @default(autoincrement())
    title       String
    genre       String
    playlists   Playlist[] @relation("PlaylistSongs")
}

model User {
  id        Int       @id @default(autoincrement())
  username  String    @unique
  firstName String
  lastName  String
  password  String
  email     String    @unique
  role      String
  playlists Playlist[] @relation("UserPlaylists")
}